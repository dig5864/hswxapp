  height: 250px;
  margin-bottom: 10rpx;
}

.section_two_images {
  margin-bottom: 10rpx;
}

.page-body {
  padding-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 100%;
}

.page-section {
  width: 100%;
  margin-bottom: 0rpx;
}

