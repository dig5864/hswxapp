.item_image {
  display: flex;
  width: 350rpx;
  height: 250rpx;
  margin: 0 15rpx;
}

.title_image {
  height:250px;
  width:100%
}

.layout_horizontal {
  display: flex;
  flex-direction: row;
  justify-content: center;
