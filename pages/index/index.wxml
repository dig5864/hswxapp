<!--index.wxml-->
<view class="section">
  <view class="page-body">

    <!--滚动图片-->
    <view class="page-section swiper">
      <swiper indicator-dots="false" autoplay="true" circular="true" interval="5000" duration="500" previous-margin="1px" next-margin="1px">
        <block wx:for="{{imgUrls}}" wx:key="*this">
          <swiper-item>
            <image class="swiper-item" src='{{ item }}' />
          </swiper-item>
        </block>
      </swiper>
    </view>

    <!--导航的几个图标-->
    <view class="page-section layout_horizontal">
      <image class='navi_img' src='../../images/about.png' mode='aspectFit' />
      <image class='navi_img' src='../../images/menu.png' mode='aspectFit' />
      <image class='navi_img' src='../../images/contact.png' mode='aspectFit' />
      <image class='navi_img' src='../../images/map.png' mode='aspectFit' />
    </view>

    <!--公司简介-->
    <view style='display:flex;justify-content: center'>
      <image class='title_img' src="../../images/title_introduce.png" mode="aspectFit"/>
    </view>
    
    <view bindtap='gotoToProductView' class='page-section page-section-spacing text_intro'>
     1234567890abcdefghjkl;1234567890abcdefghjkl;
    </view>
    <!--产品简介-->
    <view class="page-section page-section-spacing">
      <view class='layout_vertical'>
        <view class='layout_horizontal'>
          <image catchtap='bindViewTap' class='item_image' src='../images/kuppahime.png' mode='aspectFill' />
          <image class='item_image' src='../images/kuppahime.png' mode='aspectFill' />
        </view>
        <view class='layout_horizontal'>
          <text class='item_text'>{{ motto }}</text>
          <text class='item_text'>123</text>
        </view>
        <view class='layout_horizontal'>
          <image class='item_image' src='../images/kuppahime.png' mode='aspectFill' />
          <image class='item_image' src='../images/kuppahime.png' mode='aspectFill' />
        </view>
        <view class='layout_horizontal'>
